<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#c62828" /> <!-- Màu đỏ đậm khi nhấn -->
            <corners android:radius="28dp" />
            <stroke android:width="0.5dp" android:color="#c62828" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#EA4335" /> <!-- Màu đỏ Google -->
            <corners android:radius="28dp" />
            <stroke android:width="0.5dp" android:color="#EA4335" />
        </shape>
    </item>
</selector> 