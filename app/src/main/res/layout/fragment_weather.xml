<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_background"
    tools:context=".WeatherFragment">

    <!-- Decorative Wave 1 -->
    <View
        android:id="@+id/decorativeWave1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/wave_shape"
        android:alpha="0.6"
        android:layout_marginTop="-50dp"
        android:layout_marginEnd="330dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Decorative Wave 2 -->
    <View
        android:id="@+id/decorativeWave2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/wave_shape"
        android:alpha="0.4"
        android:layout_marginBottom="80dp"
        android:layout_marginStart="-10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Decorative dots -->
    <View
        android:id="@+id/decorativeDot6"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/dot_light_blue"
        android:alpha="0.9"
        android:layout_marginBottom="560dp"
        android:layout_marginStart="350dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="80dp">

            <!-- Title -->
            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weather"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                android:layout_marginStart="20dp"
                app:fontFamily="@font/montserrat_semibold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Location -->
            <TextView
                android:id="@+id/locationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Binh Duong, Vietnam"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"
                app:fontFamily="@font/montserrat_regular"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/titleText" />

            <!-- Search Bar -->
            <androidx.cardview.widget.CardView
                android:id="@+id/searchBar"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/locationText">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="15dp">

                    <EditText
                        android:id="@+id/cityInput"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="Enter city name"
                        android:inputType="text"
                        android:textColor="#333333"
                        android:textColorHint="#AAAAAA"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/searchButton"
                        android:layout_width="80dp"
                        android:layout_height="35dp"
                        android:background="@drawable/dot_blue"
                        android:text="Search"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Error Message -->
            <TextView
                android:id="@+id/errorMessage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="5dp"
                android:text="City not found! Please check the name and try again."
                android:textColor="#F44336"
                android:textSize="12sp"
                android:visibility="gone"
                app:fontFamily="@font/montserrat_regular"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/searchBar" />

            <!-- Current Weather Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/currentWeatherCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/searchBar">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/currentWeatherTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Current Weather"
                        android:textColor="#333333"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:fontFamily="@font/montserrat_semibold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/temperatureText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="28°C"
                        android:textColor="#333333"
                        android:textSize="40sp"
                        android:textStyle="bold"
                        app:fontFamily="@font/montserrat_semibold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/currentWeatherTitle" />

                    <ImageView
                        android:id="@+id/weatherIcon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="16dp"
                        android:src="@drawable/icon_sunny"
                        app:layout_constraintBottom_toBottomOf="@id/temperatureText"
                        app:layout_constraintStart_toEndOf="@id/temperatureText"
                        app:layout_constraintTop_toTopOf="@id/temperatureText" />

                    <TextView
                        android:id="@+id/conditionText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Sunny"
                        android:textColor="#555555"
                        android:textSize="16sp"
                        app:fontFamily="@font/montserrat_regular"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/temperatureText" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/conditionText">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Humidity"
                                android:textColor="#999999"
                                android:textSize="14sp"
                                app:fontFamily="@font/montserrat_regular" />

                            <TextView
                                android:id="@+id/humidityText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="80%"
                                android:textColor="#333333"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                app:fontFamily="@font/montserrat_semibold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Wind"
                                android:textColor="#999999"
                                android:textSize="14sp"
                                app:fontFamily="@font/montserrat_regular" />

                            <TextView
                                android:id="@+id/windText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="5 km/h"
                                android:textColor="#333333"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                app:fontFamily="@font/montserrat_semibold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Visibility"
                                android:textColor="#999999"
                                android:textSize="14sp"
                                app:fontFamily="@font/montserrat_regular" />

                            <TextView
                                android:id="@+id/visibilityText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="10 km"
                                android:textColor="#333333"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                app:fontFamily="@font/montserrat_semibold" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- Driving Alert Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/drivingAlertCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/currentWeatherCard">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Driving Alerts"
                        android:textColor="#333333"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:fontFamily="@font/montserrat_semibold" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/alertContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        app:cardBackgroundColor="#FFF8E1"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="15dp"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@android:drawable/ic_dialog_info"
                                app:tint="#FFA000" />

                            <TextView
                                android:id="@+id/alertText"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="15dp"
                                android:text="Good conditions for driving. Stay hydrated and drive safely."
                                android:textColor="#333333"
                                android:textSize="14sp"
                                app:fontFamily="@font/montserrat_regular" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Recommendations"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:fontFamily="@font/montserrat_semibold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:id="@+id/recommendation1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="• Maintain safe following distance"
                            android:textColor="#555555"
                            android:textSize="14sp"
                            android:layout_marginBottom="8dp"
                            app:fontFamily="@font/montserrat_regular" />

                        <TextView
                            android:id="@+id/recommendation2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="• Check tire pressure before long trips"
                            android:textColor="#555555"
                            android:textSize="14sp"
                            android:layout_marginBottom="8dp"
                            app:fontFamily="@font/montserrat_regular" />

                        <TextView
                            android:id="@+id/recommendation3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="• Drive at moderate speeds"
                            android:textColor="#555555"
                            android:textSize="14sp"
                            app:fontFamily="@font/montserrat_regular" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Hourly Forecast Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/hourlyForecastCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/drivingAlertCard">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Today's Forecast"
                        android:textColor="#333333"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:fontFamily="@font/montserrat_semibold" />

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:scrollbars="none">

                        <LinearLayout
                            android:id="@+id/hourlyForecastContainer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <!-- Hourly forecast items will be added programmatically -->
                            
                            <!-- Sample hour item (will be created dynamically) -->
                            <LinearLayout
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="10dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Now"
                                    android:textColor="#333333"
                                    android:textSize="14sp"
                                    app:fontFamily="@font/montserrat_regular" />

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_marginTop="5dp"
                                    android:src="@drawable/icon_sunny" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="28°C"
                                    android:textColor="#333333"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    app:fontFamily="@font/montserrat_semibold" />
                            </LinearLayout>

                        </LinearLayout>
                    </HorizontalScrollView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Forecast Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/forecastCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/hourlyForecastCard">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Next Days Forecast"
                        android:textColor="#333333"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:fontFamily="@font/montserrat_semibold" />

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:scrollbars="none">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <!-- Day 1 Forecast -->
                            <LinearLayout
                                android:layout_width="92dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="10dp">

                                <TextView
                                    android:id="@+id/day1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Tomorrow"
                                    android:textColor="#333333"
                                    android:textSize="14sp"
                                    app:fontFamily="@font/montserrat_regular" />

                                <TextView
                                    android:id="@+id/day1Temp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="29°C"
                                    android:textColor="#333333"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    app:fontFamily="@font/montserrat_semibold" />

                                <TextView
                                    android:id="@+id/day1Condition"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="Sunny"
                                    android:textColor="#555555"
                                    android:textSize="12sp"
                                    app:fontFamily="@font/montserrat_regular" />
                            </LinearLayout>

                            <!-- Day 2 Forecast -->
                            <LinearLayout
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="10dp">

                                <TextView
                                    android:id="@+id/day2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Mon"
                                    android:textColor="#333333"
                                    android:textSize="14sp"
                                    app:fontFamily="@font/montserrat_regular" />

                                <TextView
                                    android:id="@+id/day2Temp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="27°C"
                                    android:textColor="#333333"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    app:fontFamily="@font/montserrat_semibold" />

                                <TextView
                                    android:id="@+id/day2Condition"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="Cloudy"
                                    android:textColor="#555555"
                                    android:textSize="12sp"
                                    app:fontFamily="@font/montserrat_regular" />
                            </LinearLayout>

                            <!-- Day 3 Forecast -->
                            <LinearLayout
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="10dp">

                                <TextView
                                    android:id="@+id/day3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Tue"
                                    android:textColor="#333333"
                                    android:textSize="14sp"
                                    app:fontFamily="@font/montserrat_regular" />

                                <TextView
                                    android:id="@+id/day3Temp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="26°C"
                                    android:textColor="#333333"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    app:fontFamily="@font/montserrat_semibold" />

                                <TextView
                                    android:id="@+id/day3Condition"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="Rain"
                                    android:textColor="#555555"
                                    android:textSize="12sp"
                                    app:fontFamily="@font/montserrat_regular" />
                            </LinearLayout>

                            <!-- Day 4 Forecast -->
                            <LinearLayout
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="10dp">

                                <TextView
                                    android:id="@+id/day4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Wed"
                                    android:textColor="#333333"
                                    android:textSize="14sp"
                                    app:fontFamily="@font/montserrat_regular" />

                                <TextView
                                    android:id="@+id/day4Temp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="28°C"
                                    android:textColor="#333333"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    app:fontFamily="@font/montserrat_semibold" />

                                <TextView
                                    android:id="@+id/day4Condition"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="Partly Cloudy"
                                    android:textColor="#555555"
                                    android:textSize="12sp"
                                    app:fontFamily="@font/montserrat_regular" />
                            </LinearLayout>

                            <!-- Day 5 Forecast -->
                            <LinearLayout
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="10dp">

                                <TextView
                                    android:id="@+id/day5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Thu"
                                    android:textColor="#333333"
                                    android:textSize="14sp"
                                    app:fontFamily="@font/montserrat_regular" />

                                <TextView
                                    android:id="@+id/day5Temp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="30°C"
                                    android:textColor="#333333"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    app:fontFamily="@font/montserrat_semibold" />

                                <TextView
                                    android:id="@+id/day5Condition"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="Sunny"
                                    android:textColor="#555555"
                                    android:textSize="12sp"
                                    app:fontFamily="@font/montserrat_regular" />
                            </LinearLayout>
                        </LinearLayout>
                    </HorizontalScrollView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    
    <!-- Loading Indicator -->
    <androidx.cardview.widget.CardView
        android:id="@+id/loadingIndicator"
        android:layout_width="100dp"
